extends layout

block header
	+navigation

block content
	section#container(class="form-fluid")
		h2 ADD EVENT
		if flashError
			div#flash(class="error")= flashError
		if flashSuccess
			div#flash(class="success")= flashSuccess
		if user && user.connect
			+eventForm
		else
			a(href=`${connectLink}`) Connect Stripe
block footer
	+footer(true)