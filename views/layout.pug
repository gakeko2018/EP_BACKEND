doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		meta(http-equiv="X-UA-Compatible", content="ie=edge")
		link(rel="shortcut icon", href="/images/header-bg.jpg")
		link(rel="stylesheet", href="http://weareoutman.github.io/clockpicker/dist/jquery-clockpicker.min.css")
		link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-daterangepicker/3.0.3/daterangepicker.min.css")
		link(rel="stylesheet", href="/dist/main.css")
		title EP - #{h.formatCamelCase(title)}
	body
	//- including mixins
	include template/mixins/_footer
	include template/mixins/_navigation
	include template/mixins/_profile-nav
	include template/mixins/_event-card
	include template/mixins/_event-form
	include template/mixins/_pagination
	include template/mixins/_payment-modal
	//- Global Flash
	-let flashClass = "notif-flash"
	if flashSuccess
		-flashClass = "notif-flash success";
	if flashError
		-flashClass = "notif-flash alert"
	div(class=flashClass)
		if flashSuccess || flashError
			span= flashSuccess || flashError
			button#closeFlash.fa.fa-close
	block header
		include template/_header
	block content
	block footer
		+footer()
	block scripts
		script(src="https://code.jquery.com/jquery-3.3.1.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-daterangepicker/3.0.3/moment.min.js")
		script(src="https://weareoutman.github.io/clockpicker/dist/jquery-clockpicker.min.js")
		script(src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-daterangepicker/3.0.3/daterangepicker.min.js")
		script(src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDxDri1r5T3sproZmytZmnJluDj-IilQ1I&libraries=places")
		script(src="https://js.pusher.com/4.4/pusher.min.js")
		script(src="https://js.stripe.com/v3/")
		script(src="/dist/main.bundle.js")
	block customScripts
		
